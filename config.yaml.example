servers:
  - name: server1
    host: 192.168.1.10
    port: 22
    username: ubuntu
    # choose one authentication method
    password: null
    private_key_path: ~/.ssh/id_rsa
    logs:
      - /var/log/auth.log
      - /var/log/fail2ban.log

poll_interval_seconds: 60

email:
  enabled: false
  smtp_host: smtp.example.com
  smtp_port: 587
  use_tls: true
  username: user@example.com
  password: your_password
  from_addr: alerts@example.com
  to_addrs:
    - you@example.com

storage:
  sqlite_path: ./data/vigilant_raccoon.db

collection:
  tail_lines: 2000

web:
  host: 127.0.0.1
  port: 8000
